<?xml version="1.0"?>
<robot name="demobot">
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="purple">
        <color rgba="0.3098 0.1765 0.4980 1" />
    </material>
    <material name="gray">
        <color rgba="0.5 0.5 0.5 1" />
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="1 0.8 0.4"/>
            </geometry>
            <material name="purple"/>
        </visual>
    </link>

    <joint name="caster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_ball"/>
        <origin xyz="-0.4 0 -0.2"/>
    </joint>

    <link name="caster_ball">
        <visual>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.2 0.5 0.0" rpy="1.571 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.3" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.2 -0.5 0.0" rpy="1.571 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.3" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

</robot>